<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/createaccount"
    tools:context=".Add_User">

    <TextView
        android:id="@+id/viewUserName"
        android:layout_width="135dp"
        android:layout_height="27dp"
        android:text="@string/viewUserName"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/acountUserName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acountDate"
        app:layout_constraintVertical_bias="0.411" />

    <TextView
        android:id="@+id/viewName"
        android:layout_width="97dp"
        android:layout_height="26dp"
        android:layout_marginBottom="8dp"
        android:text="@string/viewName"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/acountName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.196"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/acountName"
        android:layout_width="291dp"
        android:layout_height="49dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/roundcorners"
        android:ems="10"
        android:hint="@string/textName"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/acountUserName"
        android:layout_width="291dp"
        android:layout_height="49dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/roundcorners"
        android:ems="10"
        android:hint="@string/Username"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acountDate" />

    <EditText
        android:id="@+id/acountPassword"
        android:layout_width="291dp"
        android:layout_height="49dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/roundcorners"
        android:ems="10"
        android:hint="@string/AcountPass"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acountUserName" />

    <EditText
        android:id="@+id/acountDate"
        android:layout_width="291dp"
        android:background="@drawable/roundcorners"
        android:layout_height="49dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="@string/Bday"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acountName" />

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="121dp"
        android:layout_height="51dp"
        android:layout_marginTop="52dp"
        android:text="@string/CreateAcount"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#728FB1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acountPassword" />

    <TextView
        android:id="@+id/viewPhone"
        android:layout_width="153dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:text="@string/viewDOB"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/acountDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.232"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acountName" />

    <TextView
        android:id="@+id/viewPass"
        android:layout_width="126dp"
        android:layout_height="27dp"
        android:text="@string/viewPass"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/acountPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acountUserName"
        app:layout_constraintVertical_bias="0.47" />

</androidx.constraintlayout.widget.ConstraintLayout>